@section Scripts {
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <link href="~/js/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/js/jquery-confirm.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script>

        $(document).ready(function () {
            $('form').on('submit', function (event) {
                event.preventDefault(); // Prevent default form submission

                // Display an alert message
                //alert('1 Form submitted successfully!');

                // Optionally, you can submit the form programmatically
                 this.submit(); // Uncomment this line to allow form submission after showing the alert
                // Show alert message if TempData["SuccessMessage"] is present
                var successMessage = '@TempData["SuccessMessagex"]';
                if (successMessage) {
                    alert(successMessage); // Display the success message
                }
            });
        });





        $(document).ready(function () {
            var partyNamesArray = [];

            // Populate partyname dropdown on page load and store data in array
            $.ajax({
                url: 'https://localhost:61803/TblDispatches/GetPartyNames',
                type: 'GET',
                success: function (data) {
                    $.each(data, function (index, item) {
                        if (item && item.partyname) {
                            partyNamesArray.push(item.partyname);
                        } else {
                            console.error('Item does not contain partyname:', item);
                        }
                    });

                    // Sort the array alphabetically
                    partyNamesArray.sort();

                    $('#partyname').autocomplete({
                        source: function (request, response) {
                            var results = $.ui.autocomplete.filter(partyNamesArray, request.term);
                            if (!request.term) {
                                results = partyNamesArray;
                            }
                            response(results);
                        },
                        select: function (event, ui) {
                            $('#partyname').val(ui.item.value);
                            return false;
                        },
                        minLength: 0
                    }).focus(function () {
                        $(this).autocomplete('search', '');
                    });

                    // Check if the party name exists on focus out
                    $('#partyname').on('focusout', function () {
                        var inputVal = $(this).val();
                        if (inputVal && !partyNamesArray.includes(inputVal)) {
                            $.confirm({
                                title: 'Party Name Not Found',
                                content: 'The entered party name is not in the list. Would you like to add a new party name?',
                                buttons: {
                                    Yes: function () {
                                        $('#addPartyModal').modal('show');
                                    },
                                    No: function () {
                                        // Do nothing
                                    }
                                }
                            });
                        }
                    });
                },
                error: function (xhr, status, error) {
                    console.error('AJAX Error:', status, error);
                }
            });

            // Fill Monthnamex and Yearnamex based on Datex
            $('#datex').on('change', function () {
                var dateValue = $(this).val();
                if (dateValue) {
                    var dateObj = new Date(dateValue);
                    var monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
                    var monthName = monthNames[dateObj.getMonth()];
                    var yearName = dateObj.getFullYear();
                    $('#monthnamex').val(monthName);
                    $('#yearnamex').val(yearName);
                }
            });
        });



    </script>
    
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
